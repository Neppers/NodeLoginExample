extends layout

block content
    .page-header: h1=title
    if messages && messages.error
        .alert.alert-danger
            each message in messages.error
                p=message
    form.form(action="/login", method="POST")
        .form-group: input.form-control(type="email", placeholder="Email", name="email")
        .form-group: input.form-control(type="password", placeholder="Password", name="password")
        button.btn.btn-primary.btn-block(type="submit") Login