extends layout
    
block content
    .page-header: h1 Register
    if messages && messages.error
        .alert.alert-danger
            each message in messages.error
                p=message
    form.form(action="/register", method="POST")
        .form-group: input.form-control(type="email", placeholder="Email", name="email")
        .form-group: input.form-control(type="password", placeholder="Password", name="password")
        .form-group: input.form-control(type="password", placeholder="Confirm password", name="confirmPassword")
        button.btn.btn-primary.btn-block(type="submit") Register